SBT-raytracer 1.0


camera
{
	position = (5, 0, 1);
	viewdir = (-1, 0, -0.3);
	updir = (0, 0, 1);
}

// Directional light which shouldn't
// cast any shadows
directional_light
{
	direction = (-1, 0, -0.2);
	color = (1, 1, 1);
}

point_light
{
	position = (0, 0, 0);
	color = (1, 1, 1);
}

