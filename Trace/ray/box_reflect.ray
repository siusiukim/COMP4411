translate( 0, 1, 0,
	scale( 0.8, 0.8, 0.8, 
		box {
			material = { 
				diffuse = (0.5, 0, 0); 
				specular = (0.5, 0.5, 0.5);
				reflective = (1, 1, 1);
				shininess = 0.2;
			}
		} ) )

